{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Pomodoro Timer",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "notification": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "Pomodoro Timer",
        "width": 300,
        "height": 550,
        "resizable": false,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "bundle": {
      "active": true,
      "identifier": "com.example.pomodoro",
      "icon": []
    }
  }
}